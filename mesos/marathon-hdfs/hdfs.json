{
    "id": "/hadoop",
    "groups": [
        {
            "id": "/hadoop/hdfs",
            "apps": [
                {
                    "id": "/hadoop/hdfs/name-node",
                    "cmd": "./run-hdfs.sh namenode > $HADOOP_NAMENODE_LOG 2>&1",
                    "env": {
                        "JAVA_HOME": "<path to Java7 jre or jdk>",
                        "HADOOP_NAMENODE_DIR": "<directory for HDFS NameNode data",
                        "HADOOP_NAMENODE_LOG": "<log file for HDFS NameNode>",
                        "HADOOP_PREFIX": "hadoop-2.7.1",
                        "HADOOP_CONF_DIR": "etc/hadoop"
                    },
                    "uris": [
                        "http://www.apache.org/dyn/closer.cgi/hadoop/common/hadoop-2.7.1/hadoop-2.7.1.tar.gz",
                        "file://<path to run-hdfs.sh>"
                        ],
                    "cpus": 1.0,
                    "mem": 1000.0,
                    "ports": [8020, 50070, 50470],
                    "instances": 1
                },
                {
                    "id": "/hadoop/hdfs/data-node",
                    "dependencies": ["/hadoop/hdfs/name-node"],
                    "cmd": "./run-hdfs.sh datanode > $HADOOP_DATANODE_LOG 2>&1",
                    "env": {
                        "JAVA_HOME": "<path to Java7 jre or jdk>",
                        "NAME_NODE_MARATHON_URL": "http://<address of marathon server>:8080/v2/apps/hadoop/hdfs/name-node",
                        "HADOOP_DATANODE_DIR": "<directory for HDFS DataNode data",
                        "HADOOP_DATANODE_LOG": "<log file for HDFS DataNode>",
                        "HADOOP_PREFIX": "hadoop-2.7.1",
                        "HADOOP_CONF_DIR": "etc/hadoop"
                    },
                    "uris": [
                        "http://www.apache.org/dyn/closer.cgi/hadoop/common/hadoop-2.7.1/hadoop-2.7.1.tar.gz",
                        "file://<path to run-hdfs.sh>"
                        ],
                    "cpus": 1.0,
                    "mem": 1000.0,
                    "ports": [8010, 50010, 50075, 50475],
                    "constraints": [
                        ["hostname", "UNIQUE"]
                        ],
                    "instances": 0
                }
            ]
        }
    ]
}
