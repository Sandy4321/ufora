#include "ThreadGroupTree.hppml"
#include "../ComputationDefinition.hppml"
#include "../../core/UnitTest.hpp"

using namespace Cumulus;
using namespace Fora::Interpreter;

namespace {

ComputationId root()
	{
	return ComputationId::Root(hash_type(1));
	}

ComputationId split(ComputationId comp, long ix)
	{
	return ComputationId::CreateIdForSplit(
		ComputationDefinition::Split(comp, PausedComputation()), 
		hashValue(comp) + hash_type(ix), 
		ix
		);
	}

ComputationId split(ImmutableTreeVector<int> ix)
	{
	ComputationId res = root();
	for (auto i: ix)
		res = split(res, i);
	return res;
	}

}

BOOST_AUTO_TEST_CASE( test_cumulus_ThreadGroupTree )
{
	ThreadGroupTree tree;

	ThreadGroup grp = tree.addComputation(root());

	BOOST_CHECK(grp.rootComputation() == root());
	BOOST_CHECK(grp == ThreadGroup::groupFor(root()));

	BOOST_CHECK(tree.groupForComputation(root()) == grp);
	BOOST_CHECK(tree.groupForComputation(split(emptyTreeVec() + 1)) == grp);
	BOOST_CHECK(tree.groupForComputation(split(emptyTreeVec() + 1 + 2)) == grp);

	BOOST_CHECK(tree.addComputation(split(emptyTreeVec() + 1 + 2)) == grp);

	BOOST_CHECK(tree.addComputation(split(emptyTreeVec() + 1 + 2 + 3)) == grp);

	std::set<ComputationId> changed;
	tree.addThreadGroup(ThreadGroup::groupFor(split(emptyTreeVec() + 1 + 2)), changed);

	BOOST_CHECK(changed.find(split(emptyTreeVec() + 1)) == changed.end());
	BOOST_CHECK(changed.find(split(emptyTreeVec() + 1 + 2)) != changed.end());
	BOOST_CHECK(changed.find(split(emptyTreeVec() + 1 + 2 + 3)) != changed.end());

	BOOST_CHECK_EQUAL(changed.size(), 2);
}
