#include "JudgmentBundleScope.hppml"
#include "../Judgment/JudgmentParser.hppml"
#include "../../core/UnitTest.hpp"
#include "../../core/Logging.hpp"

using namespace Fora;

namespace {

JudgmentOnValue parseJOV(const string& inJOVString)
	{
	SimpleParseNode parseNode = parseStringToSimpleParse(inJOVString);
	
	return JudgmentParser::parseJOV(parseNode);
	}

}

BOOST_AUTO_TEST_SUITE( test_FORA_JudgmentBundle )

BOOST_AUTO_TEST_CASE( test_canonical )
   {
   JudgmentBundleScope scope;

	JudgmentBundle bundle = scope.canonicalBundle(parseJOV("(1,2,3)"));

   BOOST_CHECK(bundle.coverageJOV() == parseJOV("*"));

   BOOST_CHECK(bundle.filterVariables().size() == 7);
   }

BOOST_AUTO_TEST_CASE( test_resolution )
   {
   JudgmentBundleScope scope;

   JudgmentBundle bundle = scope.canonicalBundle(parseJOV("(1,2,3)"));

   BOOST_CHECK(bundle.immediateFilterVariables().size() == 1);

   JudgmentBundle bundle2 = bundle.resolve(bundle.immediateFilterVariables()[0], true);

   BOOST_CHECK(bundle2.coverageJOV() == parseJOV("(*,*,*)"));

   BOOST_CHECK(bundle2.immediateFilterVariables().size() == 3);

   JudgmentBundle bundle3 = 
      bundle2.resolve(bundle2.immediateFilterVariables()[0], true)
             .resolve(bundle2.immediateFilterVariables()[1], true)
             .resolve(bundle2.immediateFilterVariables()[2], true);

   BOOST_CHECK(bundle3.coverageJOV() == parseJOV("({Int64},{Int64},{Int64})"));

   JudgmentBundle bundle4 = 
      bundle3.resolve(bundle3.immediateFilterVariables()[0], true)
             .resolve(bundle3.immediateFilterVariables()[1], true)
             .resolve(bundle3.immediateFilterVariables()[2], true);

   BOOST_CHECK(bundle4.coverageJOV() == parseJOV("(1,2,3)"));
   BOOST_CHECK(bundle4.isConstant());
   }

BOOST_AUTO_TEST_SUITE_END( )

